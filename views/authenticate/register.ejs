<% layout('layout/boilerplate') %>

<div class="row">
	<div class="col-md-5">
		<h1 class="text-center text-purple">Create Account</h1>
		<img class="img-fluid floating d-none d-md-block" src="/images/login.svg" alt="Card image cap">
	</div>
	<div class="col-1 d-none d-md-block"></div>
	<div class="col-md-5 px-5 px-md-0">
		<h1 class="text-center d-none d-md-block">Your Info:</h1>
				<form action="/users/register" method="POST" novalidate class="needs-validation">
					<div class="mb-3">
						<label class="form-label" for="firstName">First Name</label>
						<input class="form-control" type="text" id="firstName" name="user[firstName]" required />
						<div class="valid-feedback">Looks good!</div>
					</div>
					<div class="mb-3">
						<label class="form-label" for="lastName">Last Name</label>
						<input class="form-control" type="text" id="lastName" name="user[lastName]" required />
						<div class="valid-feedback">Looks good!</div>
					</div>
					<div class="mb-3">
						<label class="form-label" for="email">Email</label>
						<input class="form-control" type="email" id="email" name="user[email]" required />
						<div class="valid-feedback">Looks good!</div>
					</div>
					<div class="mb-3">
						<label class="form-label" for="username">Username</label>
						<input class="form-control" type="text" id="username" name="user[username]" required />
						<div class="valid-feedback">Looks good!</div>
					</div>
					<div class="mb-3">
						<label class="form-label" for="password">Password</label>
						<input class="form-control" type="password" id="password" name="user[password]" required />
						<div class="valid-feedback">Looks good!</div>
					</div>
					<p>Already have an account? <a href="/users/login">Login</a></p>
					<button class="btn btn-success">Create Account</button>
				</form>
	</div>
</div>
